
import cv2
import numpy as np

img1 = cv2.imread('ImageQuery/fre.lon.png',0)
#img2 = cv2.imread('ImageTrain/frelonts.jpg',0)
img2 = cv2.imread('ImageTrain/frelonts.jpg',0)

orb = cv2.ORB_create(nfeatures=10000)
kp1, ds1 = orb.detectAndCompute(img1,None)
kp2, ds2 = orb.detectAndCompute(img2,None)
