bf = cv2.BFMatcher()
matchers = bf.knnMatch(ds1,ds2,k=2)

good = []
for m,n in matchers:
    if m.distance< 0.75*n.distance:
        good.append([m])

print(len(good))
img3 = cv2.drawMatchesKnn(img1,kp1,img2,kp2,good,None,flags=2)


